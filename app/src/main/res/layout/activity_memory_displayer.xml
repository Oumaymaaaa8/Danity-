<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF8F3"
    tools:context=".MemoryDisplayer">

    <TextView
        android:id="@+id/memContent"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="331dp"
        android:layout_height="541dp"
        android:layout_marginTop="30sp"
        android:editable="false"
        android:ems="10"
        android:gravity="start|top"
        android:saveEnabled="true"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="cc"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/memTitle"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="10sp"
        android:clickable="false"
        android:contextClickable="false"
        android:editable="false"
        android:ellipsize="none"

        android:ems="10"
        android:gravity="start|top"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:soundEffectsEnabled="true"
        android:text="cc"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="142dp"
        android:src="@drawable/_693edceb44a96aa090aa4677da3643d__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <ImageButton
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#FDF8F3"
        android:src="@drawable/left_chevron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="#FDF8F3"
        app:layout_constraintBottom_toBottomOf="@+id/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/compose" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="76dp"
        android:background="#FDF8F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bin" />


</androidx.constraintlayout.widget.ConstraintLayout>